<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- سایر ویوها -->
    <!-- مبلغ وام -->
    <TextView
        android:id="@+id/loanAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مبلغ وام (تومان)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/loanAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="مبلغ وام را وارد کنید" />

    <!-- نرخ بهره سالانه -->
    <TextView
        android:id="@+id/interestRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نرخ بهره سالانه (%)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/interestRateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="نرخ بهره را وارد کنید" />

    <!-- مدت وام به سال -->
    <TextView
        android:id="@+id/loanTermLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مدت وام (ماه)"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/loanTermInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="مدت وام را وارد کنید" />

    <!-- دکمه محاسبه -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="محاسبه" />

    <!-- نمایش نتیجه -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- RecyclerView برای نمایش لیست اقساط -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/installmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
