<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_type_user"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:hint="@string/txt_type_user"
                    android:textColorHint="@color/color_btn_login"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/color_btn_login"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/color_btn_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_type_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/color_btn_login"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_type_sanad"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_type_sanad"
                    android:textColorHint="@color/color_btn_login"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/color_btn_login"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/color_btn_login"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_type_user">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_type_sanad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_location"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_type_sanad">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_tabaghe"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_tabaghe"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_location">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_tabaghe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_age_bana"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_age_bana"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@+id/input_txt_tabaghe">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_age_bana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_vaziyad_melk"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_vaziyad_melk"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_age_bana">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_vaziyad_melk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_cunter_otagh"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_cunter_otagh"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_vaziyad_melk">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_cunter_otagh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_nema_sakhteman"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_nema_sakhteman"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="@+id/input_txt_type_user"
                    app:layout_constraintStart_toStartOf="@+id/input_txt_type_user"
                    app:layout_constraintTop_toBottomOf="@id/input_txt_cunter_otagh">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_nema_sakhteman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="8dp"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/txt_selected"
                        android:inputType="text"
                        android:minHeight="36dp"
                        android:padding="18dp"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.dev.amr.amlakfile.data.model.custom_views.ITextView
                    android:id="@+id/txt_if_vam_darad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/txt_if_melk_vam_darad"
                    android:textColor="@color/txt_color_title"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_txt_nema_sakhteman" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_if_vam_darad"
                    app:startIconTint="@color/md_indigo_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/border4"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <com.dev.amr.amlakfile.data.model.custom_views.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_ok2"
                            android:textColor="@color/color_4"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border9"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <com.dev.amr.amlakfile.data.model.custom_views.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_not_ok"
                            android:textColor="@color/color_4"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl" />

                    </LinearLayout>


                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_txt_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="90dp"
                    android:hint="@string/txt_description"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/md_indigo_500"
                    app:boxStrokeWidth="1dp"
                    app:expandedHintEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/md_indigo_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio_group"
                    app:startIconTint="@color/md_indigo_500">

                    <com.dev.amr.amlakfile.data.model.custom_views.IEditText
                        android:id="@+id/edt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:enabled="true"
                        android:gravity="top"
                        android:lineSpacingExtra="2dp"
                        android:padding="20dp"
                        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد"
                        android:textColor="@color/md_indigo_500"
                        android:textColorHint="@color/md_grey_500"
                        android:textSize="14sp"
                        app:mode="PERSIAN_TEXT_NORMAL16"
                        tools:ignore="MissingPrefix" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:id="@+id/lay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.dev.amr.amlakfile.data.model.custom_views.IButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:text="@string/txt_next"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.dev.amr.amlakfile.data.model.custom_views.IButton
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_gray"
            android:gravity="center"
            android:text="@string/txt_previous"
            android:textColor="@color/color_btn_login"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_next" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

