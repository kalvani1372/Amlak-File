                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/txt_wc"
                    android:textColorHint="@color/md_indigo_500"
                    app:boxCornerRadiusBottomEnd="10dp"
