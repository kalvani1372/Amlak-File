<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="spinner_style">
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:showDividers">none</item>
        <item name="android:popupBackground">@drawable/frame_shape</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="background">@color/transparent</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="FontFamily">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:fontFamily">assets/font/Dirooz.ttf</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CircularProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/circular_progress_bar</item>
        <item name="android:max">100</item>
        <item name="android:progress">75</item> <!-- مقدار پیشرفت پیش‌فرض -->
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:indeterminate">false</item>
    </style>

</resources>
